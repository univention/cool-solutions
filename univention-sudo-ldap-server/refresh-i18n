po=de
i18nfile=./modules/univention/admin/handlers/sudo/"$po"

xgettext -L Python -o "messages.pot" modules/univention/admin/handlers/sudo/*.py

if grep -qs "Content-Type: text/plain; charset=CHARSET" "messages.pot"
then
	echo "Rewriting encoding information from CHARSET to UTF-8"
	sed -i "s#Content-Type: text/plain; charset=CHARSET#Content-Type: text/plain; charset=UTF-8#" "messages.pot"
fi

echo "Merging old gettext data with newly introduced strings"
msgmerge "$i18nfile.po" "messages.pot" > "$po.pox"

echo 'Now you need to fix up all "fuzzy" entries in your editor'

if [ -n "$EDITOR" ]; then
    $EDITOR "$po.pox"
else
	sensible-editor "$po.pox"
fi

echo -n "Use this entry? (Y/n)"
read yn

if [ -z "$yn" ] || [ "$yn" = "y" ]; then
    echo "Copying po file"
    cp "$po.pox" "$i18nfile.po"
fi

rm -rf "messages.pot" "$po.pox"

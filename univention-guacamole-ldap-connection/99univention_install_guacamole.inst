VERSION=3

. /usr/share/univention-join/joinscripthelper.lib
joinscript_init

eval "$(ucr shell)"

echo -e "Checking if UCR variables for LDAP configuration are set..."
if [ "${guacamole_user_dn}" ]; then
    echo -e "LDAP_USER_BASE_DN can be set"
else
    echo -e "LDAP_USER_BASE_DN cannot be set, check UCR variable 'guacamole/user/dn'!"
    exit 1
fi
if [ "${guacamole_config_base_dn}" ]; then
    echo -e "LDAP_CONFIG_BASE_DN can be set"
else
    echo -e "LDAP_CONFIG_BASE_DN cannot be set, check UCR variable 'guacamole/config/base/dn'!"
    exit 1
fi
if [ "${guacamole_ldap_username_attribute}" ]; then
    echo -e "LDAP_USERNAME_ATTRIBUTE can be set"
else
    echo -e "LDAP_USERNAME_ATTRIBUTE cannot be set, check UCR variable 'guacamole/ldap/username/attribute'!"
    exit 1
fi
if [ "${guacamole_external_port}" ]; then
    echo -e "External port can be set"
else
    echo -e "External port cannot be set, check UCR variable 'guacamole/external/port'!"
    exit 1
fi
if [ "${guacamole_ldap_user_searchfilter}" ]; then
	echo -e "LDAP_USER_SEARCH_FILTER can be set"
else
	echo -e "LDAP_USER_SEARCH_FILTER cannot be set, check UCR variables 'guacamole/ldap/user/searchfilter'!"
	exit 1
fi
if [ -e /etc/guacamole.secret ]; then
    echo "Search user can be used"
else
    echo -e "Cannot find password file for guacamole search user, verify that /etc/guacamole.secret exists!"
    exit 1
fi

if joinscript_check_any_version_executed; then
	echo -n "Removing old Guacd container... "
	/usr/bin/docker stop guacd > /dev/null
	/usr/bin/docker rm guacd > /dev/null
	echo -e "Done!"
fi

echo -e "Downloading and installing guacd... "
/usr/bin/docker run \
    --name guacd \
    --restart=always \
    -d guacamole/guacd:0.9.13-incubating
echo -e "Done!"


if joinscript_check_any_version_executed; then
	echo -n "Removing old Guacamole container to provision new container with new settings... "
	/usr/bin/docker stop guacamole > /dev/null
	/usr/bin/docker rm guacamole > /dev/null
	echo -e "Done!"
fi

# Sleep five seconds to let Docker rest before creating the new container
sleep 5s

echo -e "Downloading and installing Guacamole... "
/usr/bin/docker run \
    --name guacamole \
    --link guacd:guacd \
    --restart=always \
    -e LDAP_HOSTNAME="${ldap_server_name}" \
    -e LDAP_PORT="${ldap_server_port}" \
    -e LDAP_USER_BASE_DN="${guacamole_user_dn}" \
    -e LDAP_CONFIG_BASE_DN="${guacamole_config_base_dn}" \
    -e LDAP_USERNAME_ATTRIBUTE="${guacamole_ldap_username_attribute}" \
    -e LDAP_SEARCH_BIND_DN="uid=guacamole,cn=users,${ldap_base}" \
    -e LDAP_SEARCH_BIND_PASSWORD="$(cat /etc/guacamole.secret)" \
	-e LDAP_USER_SEARCH_FILTER="${guacamole_ldap_user_searchfilter}" \
    -d -p "${guacamole_external_port}":8080 guacamole/guacamole:0.9.13-incubating
echo -e "Done!"

echo -n "Installing patched LDAP auth plugin... "
/usr/bin/docker cp /usr/share/guacamole/guacamole-auth-ldap-* guacamole:/opt/guacamole/ldap/
echo -e "Done!"

echo -n "Installing patched start script to use LDAP_USER_SEARCH_FILTER..."
/usr/bin/docker cp /usr/share/guacamole/start.sh guacamole:/opt/guacamole/bin
echo -e "Done!"

echo -e "Restarting Container Guacamole for using patched plugin..."
/usr/bin/docker restart guacamole
echo -e "Done!"

echo -e "Configure Apache2 site for Guacamole... "
/usr/sbin/univention-config-registry commit /etc/apache2/sites-available/guacamole.conf
a2ensite guacamole.conf
service apache2 reload
echo -e "Done!"

echo -e "Create overview site link... "
/usr/sbin/univention-config-registry set \
    ucs/web/overview/entries/service/guacamole/link="/guacamole" \
    ucs/web/overview/entries/service/guacamole/label="Guacamole" \
    ucs/web/overview/entries/service/guacamole/description="Guacamole is a clientless remote desktop gateway." \
    ucs/web/overview/entries/service/guacamole/description/de="Guacamole ist ein clientloses Gateway f√ºr Remote-Verbindungen." \
    ucs/web/overview/entries/service/guacamole/icon="/guacamole/images/logo-64.png"
echo -e "Done!"

joinscript_save_current_version
exit 0
